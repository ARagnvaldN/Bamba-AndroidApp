<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

   <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:orientation="vertical">
	    <TextView
	        android:id="@+id/statistics_frequency_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="@string/most_frequent_item" />
	
	   <TextView
	        android:id="@+id/statistics_frequency_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="@string/most_frequent_item" />
	    
	    <TextView
	        android:id="@+id/statistics_shoppingtime_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="@string/mean_days_between_shopping" />
	    
	    <TextView
	        android:id="@+id/statistics_avg_days_shopping_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="" />
	
	</LinearLayout>
</ScrollView>
